    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "docxtemplater": "^3.63.2",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "fs-extra": "^11.3.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "ms": "^2.1.3",
    "multer": "^2.0.1",
    "pg": "^8.16.0",
    "pizzip": "^3.2.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.23"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
